{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Personal Portfolio Monorepo",
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @portfolio/app dev",
    "build": "pnpm --filter @portfolio/app build",
    "preview": "pnpm --filter @portfolio/app preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm --recursive typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "typescript": "^5.9.3"
  }
}
